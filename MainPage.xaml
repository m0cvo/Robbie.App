<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Robbie.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Robbie the Robot Says Hi!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Created by Nigel Booth 2022."
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Created by Nigel Booth 2022"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button BackgroundColor="Silver" TextColor="Navy"
                x:Name="MessageBtn"
                Text="Click me"
                SemanticProperties.Hint="Adds Message"
                Clicked="OnMessageClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
